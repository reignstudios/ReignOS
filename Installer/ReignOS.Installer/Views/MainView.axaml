<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             x:Class="ReignOS.Installer.Views.MainView">

	<Grid>
		<TextBlock Text="Installer" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" FontWeight="Bold" Margin="4,25,4,4"/>
		<Separator HorizontalAlignment="Center" VerticalAlignment="Top" Margin="150,70,150,0"/>
		
		<Grid Margin="4,100,4,50" Background="#202020">
			<Grid Name="driveSelectPage" Margin="4">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.25*"/>
					<ColumnDefinition Width="0.75*"/>
				</Grid.ColumnDefinitions>
				
				<Grid Grid.Column="0">
					<Label Content="Drives" FontSize="32" Height="50" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
					<Separator HorizontalAlignment="Center" VerticalAlignment="Top" Margin="80,40,80,0"/>
					<ListBox Margin="0,50,0,0">
						<ListBoxItem Content="/dev/sdb0"/>
						<ListBoxItem Content="/dev/sdb1"/>
						<ListBoxItem Content="/dev/sdb2"/>
						<ListBoxItem Content="/dev/sdb3"/>
					</ListBox>
				</Grid>
				
				<Grid Grid.Column="1">
					<Label Content="Options" FontSize="32" Height="50" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
					<Separator HorizontalAlignment="Center" VerticalAlignment="Top" Margin="80,40,80,0"/>
					<StackPanel Orientation="Vertical" Margin="16,50,0,0">
						<RadioButton Content="Clean Install (Uses Entire Drive)"/>
						<RadioButton Content="Dual Boot (Keep Windows)"/>
						<Grid Margin="0,16,0,0">
							<Label Content="Windows Drive" Margin="0,4,0,0" Width="110" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
							<Label Content="%" Margin="220,4,0,0" Width="110" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
							<TextBox Text="25" Margin="120,0,0,0" Width="100" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
							<Label Content="GB" Margin="360,4,0,0" Width="110" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
							<TextBox Text="64" Margin="260,0,0,0" Width="100" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
							<Slider Margin="0,28,0,0" Value="25"/>
						</Grid>
					</StackPanel>
				</Grid>
			</Grid>
		</Grid>

		<Button Name="shutdownButton" Content="Shutdown" Margin="8,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="#600000"/>
		<StackPanel Margin="100,4,4,4" Height="42" VerticalAlignment="Bottom" Background="#000040" Orientation="Horizontal" FlowDirection="RightToLeft">
			<Button Name="nextButton" Content="Next" Margin="4,0"/>
			<Button Name="backButton" Content="Back" Margin="4,0"/>
		</StackPanel>
	</Grid>
</UserControl>
